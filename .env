# ==========================================
# Django Basic Config
# ==========================================
DJANGO_ENV=local
SECRET_KEY=change-me-for-dev
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
TIME_ZONE=UTC
DATABASE_URL=sqlite:///db.sqlite3

# ==========================================
# JWT CONFIGURATION (MUST MATCH NODE)
# ==========================================
# This is the key Django uses to SIGN the JWT
# and the Node Auth-Bridge uses to VERIFY it.
JWT_SECRET=dev-secret

# Lifetime of tokens

JWT_ACCESS_MINUTES=43200   # 30 days
JWT_REFRESH_DAYS=90        # 90 days


# Optional: helps your Node Auth-Bridge verify issuer/audience
JWT_ISSUER=http://localhost:8000
JWT_AUDIENCE=messaging-platform

# ==========================================
# Redis / Celery (for production)
# ==========================================
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1
